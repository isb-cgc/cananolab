{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "block-opening-brace-space-before": "never",
        "declaration-empty-line-before": "never",
        "selector-max-empty-lines": 3,

        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": true
    }
}
